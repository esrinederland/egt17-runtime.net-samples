<Window x:Class="Earth3D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Earth3D"
        xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <esri:SceneView x:Name="MySceneView" AtmosphereEffect="Realistic" SunLighting="LightAndShadows"></esri:SceneView>
        <Button x:Name="btnCurrent" Content="Current position" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="200" Click="btnCurrent_Click" FontSize="24"/>
        <Border Margin="0,10,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Background="#B2FFFFFF" BorderThickness="2" BorderBrush="Black"  >
            <TextBlock x:Name="txtNrofPos" TextWrapping="Wrap" Text="Aantal posities: 0"  FontSize="24" Margin="5,5,5,5"/>
        </Border>
        <Border Margin="10,0,0,10" VerticalAlignment="Bottom" HorizontalAlignment="Left" Background="#B2FFFFFF" BorderThickness="2" BorderBrush="Black"  >
            <TextBlock x:Name="txtNrofPos1" TextWrapping="Wrap" Text="Data: open-notify.org"  Margin="5,5,5,5"/>
        </Border>
    </Grid>
</Window>
